function PXGCert(pri){
  if(pri<=10000000){
  	return "M√¨nh mua s·∫Øm c≈©ng TH∆Ø·ªúNG ha";
  }else if(pri>10000000 &&pri<=50000000){
  	return "M√¨nh mua s·∫Øm c≈©ng T√ÄM T·∫†M ha";
  }else if(pri>50000000 &&pri<80000000){
  	return "M√¨nh mua s·∫Øm h∆°i b·ªã KINH ƒê√ì h∆°";
  }else{
  	return "M√¨nh l√† b·∫≠c th·∫ßy mua s·∫Øm, l√† TH√ÅNH TIKI kaka";
  }
}
function pxgPrice(no, fixed=0) {
	if(isNaN(no)) return 0;
	no = no.toFixed(fixed);
	let deli = ',';
	no += '';
	let rgx = /(\d+)(\d{3})/;
	while (rgx.test(no)) {
		no = no.replace(rgx, '$1' + deli + '$2');
	}
	return no;
}
xemBaoCaoThongKe();
